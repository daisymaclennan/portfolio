.content-box
  position fixed
  top 0
  left 0

.content
  overflow-y scroll

/*Screen widths*/
@media screen and (max-width: 800px)
  .content-box
    padding-left $small-gap
    padding-right @padding-left
    padding-top 130px

  .content
    width $mobile-width

@media screen and (min-width: 801px) and (max-width: 1440px)
  .content-box
    padding-left $large-gap
    padding-right @padding-left
    padding-top 200px

  .content
    height calc(100vh - 250px)

@media screen and (min-width: 1441px)
  .content-box
    padding-left $xlarge-gap
    padding-right @padding-left
    padding-top 240px

  .content
    height calc(100vh - 340px)

@media screen and (min-width: 801px)
  .content-box
    display flex
